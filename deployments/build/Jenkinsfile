pipeline {
  agent any
  stages {
    stage('build image') {
        steps {
            dir("deployments/build") {
          
                withAWS(credentials: 'epuerta-challenge', region: 'us-east-2'){
                    
                    sh '''
                    #!/bin/bash

                    ./build_web.sh $GIT_BRANCH \$(git tag --sort version:refname | tail -1)

                    '''
                   

                }
            }
        }
    }
  }
}
