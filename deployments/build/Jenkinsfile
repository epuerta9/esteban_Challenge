pipeline {
  agent {
    docker {
      image 'nginx:latest'
    }

  }
  stages {
    stage('prebuild') {
      agent {
        docker {
          image 'nginx:latest'
        }

      }
      steps {
        echo 'prebuilding'
      }
    }

    stage('build') {
      steps {
        sh 'ls -la '
      }
    }

    stage('postbuild') {
      steps {
        echo 'postbuild'
      }
    }

  }
}